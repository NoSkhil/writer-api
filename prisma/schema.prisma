generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model users {
  id                  String     @id @unique @default(cuid())
  first_name          String
  last_name           String
  password            String
  email               String
  phone_number        String
  profile_picture_url String?
  user_options        Json @default("{}")
  created_date        DateTime   @default(now())
  updated_date        DateTime   @default(now()) @updatedAt
  messages            messages[]
  threads             threads[]
}

model threads {
  id           String     @id @unique
  created_date DateTime   @default(now())
  user_id      String
  messages     messages[]
  user         users      @relation(fields: [user_id], references: [id])
}

model messages {
  id           String   @id @unique
  created_date DateTime @default(now())
  role         role
  content      Json
  thread_id    String
  user_id      String
  thread       threads  @relation(fields: [thread_id], references: [id])
  user         users    @relation(fields: [user_id], references: [id])
}

model logs {
  id           String   @id @unique
  type         log_type
  content      Json
  created_date DateTime @default(now())
}

model temp_threads {
  id            String          @id @unique
  created_date  DateTime        @default(now())
  temp_user     String
  temp_messages temp_messages[]
}

model temp_messages {
  id             String       @id @unique
  role           role
  content        Json
  created_date   DateTime     @default(now())
  temp_user      String
  temp_thread_id String
  temp_thread    temp_threads @relation(fields: [temp_thread_id], references: [id])
}

enum role {
  user
  assistant
}

enum log_type {
  error
  user_action
  account_creation
}
